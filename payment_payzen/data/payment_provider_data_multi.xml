<odoo>
    <data noupdate="1">
        <record id="payment_provider_payzenmulti" model="payment.provider">
            <field name="name"><![CDATA[PayZen - Payment in installments]]></field>
            <field name="display_as">Payment by credit card in installments</field>
            <field name="payment_icon_ids"
                eval="[(6, 0, [
                    ref('payment_payzen.payment_icon_cc_payzencb'),
                    ref('payment_payzen.payment_icon_cc_payzenvisa'),
                    ref('payment_payzen.payment_icon_cc_payzenmastercard'),
                ])]"/>
            <field name="image" type="base64" file="payment_payzen/static/src/img/logo.png" />
            <field name="image_128" type="base64" file="payment_payzen/static/src/img/logo.png" />
            <field name="code">payzenmulti</field>
            <field name="state">test</field>
            <field name="company_id" ref="base.main_company" />
            <field name="redirect_form_view_id" ref="payzen_provider_button" />
            <field name="environment">test</field>
            <field name="pre_msg"><![CDATA[<p>You will be redirected to the PayZen website after clicking on the payment button.</p>]]></field>

            <field name="payzen_capture_delay"></field>
            <field name="payzen_validation_mode">-1</field>
            <field name="payzen_threeds_min_amount"></field>
            <field name="payzen_multi_count">3</field>
            <field name="payzen_multi_period">30</field>
            <field name="payzen_multi_first"></field>
            <field name="payzen_redirect_enabled">0</field>
            <field name="payzen_redirect_success_timeout">5</field>
            <field name="payzen_redirect_error_timeout">5</field>
            <field name="payzen_return_mode">GET</field>
        </record>

        <record id="payment_method_payzenmulti" model="account.payment.method">
            <field name="name"><![CDATA[PayZen Multi]]></field>
            <field name="code">payzenmulti</field>
            <field name="payment_type">inbound</field>
        </record>
    </data>
</odoo>